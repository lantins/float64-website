---
pageable: true
---
<div class="page-title l-box">
  <div class="width-wrapper">
    <h1>Blog</h1>
  </div>
</div>

<section class="content content-no-border l-box">
  <div class="width-wrapper">

  <% page_articles.each_with_index do |article, i| %>
    <article class="article-listing">
      <h2><%= link_to article.title, article %></h2>
      <div class="article-meta">
        <%= article.date.strftime("%A #{article.date.day.ordinalize} %B, %Y") %>
      </div>
    </article>
  <% end %>

  </div>
</section>

<% if paginate && num_pages > 1 %>

<div class="pagination l-box">
  <div class="pure-g width-wrapper">
    <div class="pure-u-1-3">
      <% if prev_page %>
        <%= link_to '&lsaquo;&lsaquo; Previous page', prev_page, :class => 'pure-button previous' %>
      <% end %>
    </div>
    <div class="pure-u-1-3">
      <span class="page-number">
        Page <%= page_number %> of <%= num_pages %>
      </span>
    </div>
    <div class="pure-u-1-3">
      <% if next_page %>
        <%= link_to 'Next page &rsaquo;&rsaquo;', next_page, :class => 'pure-button next' %>
      <% end %>
    </div>
  </div>
</div>

<% end %>
